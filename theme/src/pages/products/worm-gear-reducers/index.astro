---
import { TextSection } from '@littlesticks/odyssey-theme-components';
import Layout from '../../../layouts/Page.astro';
import HeroSection from '../../../components/sections/heros/HeroSection.astro';
import ProductHeroSection from '../../../components/sections/heros/ProductHeroSection.astro';
import SideNavBar from '../../../components/sections/heros/SideNavBar.astro';

const seo = {
	title: 'Worm Gear Reducers | X&J Products',
	description: 'Worm Gear Reducers',
};
---

<Layout {seo}>
	<div class="hero-container">
		<SideNavBar>
	
		</SideNavBar>
	
		<ProductHeroSection class="grids">  
	
			<picture slot="image-container">
				<img
					src="/assets/images/products/worm/umrv.jpg"
					alt="X&J Products"
					id="umrv"
				  />
				<figcaption>UMRV</figcaption>
			</picture>
	  
			<picture slot="image-container">
				<img
					src="/assets/images/products/worm/umrv-vs.jpg"
					alt="X&J Products"
					id="umrv-vs"
				  />
				  <figcaption>UMRV-VS</figcaption>
			  
			</picture>
	  
			<picture slot="image-container">
				  <img
					  src="/assets/images/products/worm/urv.jpg"
					  alt="X&J Products"
					  id="urv"
					/>
					<figcaption>URV</figcaption>
				
			</picture>

			<picture slot="image-container">
				<img
					src="/assets/images/products/worm/urv-vs.jpg"
					alt="X&J Products"
					id="urv-vs"
				  />
				  <figcaption>URV-VS</figcaption>
			  
		    </picture>

			<picture slot="image-container">
				<img
					src="/assets/images/products/worm/sw.jpg"
					alt="X&J Products"
					id="sw"
				  />
				  <figcaption>SW</figcaption>
			  
		    </picture>
	
		</ProductHeroSection>
	  </div>

</Layout>

<style>
	.hero-container{
	  display: flex;
	  background-color: aliceblue;
	}

	.grids{
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap:2rem;
	}

	picture{
		width: 50%;

	}

	figcaption{
		color:black;
		text-align: center;
	}
  </style>