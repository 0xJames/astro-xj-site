---
import { TextSection } from '@littlesticks/odyssey-theme-components';
import Layout from '../../layouts/Page.astro';
import SideNavBar from '../../components/sections/heros/SideNavBar.astro';
import ProductHeroSection from '../../components/sections/heros/ProductHeroSection.astro';

const seo = {
	title: 'Products | X&J Products',
	description: 'Products Page',
};
---

<Layout {seo}> 
  <div class="hero-container">
    <SideNavBar>

    </SideNavBar>

    <ProductHeroSection>  

    <picture slot="image-container">
    <img
          src="/assets/images/products/product-catelog-en-2020.png"
          alt="X&J Products"
          id="art-cover-image"
        />
    </picture>

    </ProductHeroSection>
  </div>
  

</Layout>

<style>
  .hero-container{
    display: flex;
    background-color: aliceblue;
  }
</style>

